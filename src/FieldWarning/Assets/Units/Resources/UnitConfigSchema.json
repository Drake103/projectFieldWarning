    "title": "Unit Config Schema",
    "type": "object",
    "required": [
        "$schema",
        "ID",
        "CategoryKey",
        "Name",
        "Price",
        "PrefabPath",
        "Data",
        "Mobility"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "ID": {
            "type": "string",
            "description": "A unique ID for this unit.\n\nShould follow the format: `Unit__[category]--[model]`\ne.g.: `Unit__TNK--M1A2`",
            "pattern": "^Unit__(HEL|INF|LOG|REC|SUP|TNK|VHC)--[-a-zA-Z0-9]+$"
        },
        "CategoryKey": {
            "type": "string",
            "description": "The category of this unit.\n\nSee: <PFW.Model.Armory.UnitCategory>",
            "enum": [ "LOG", "SUP", "INF", "TNK", "REC", "VHC", "HEL" ]
        },
        "Name": {
            "type": "string",
            "description": "The full, human-friendly name of this unit.\n\nFor use in unit labels, the deck builder, etc."
        },
        "Price": {
            "type": "number",
            "description": "(float) The cost of purchasing this unit."
        },
        "PrefabPath": {
            "description": "Path to the unit's prefab, relative to any Resources directory.\n\nNOTE: The prefab should mainly have networked components that need to be synched between clients and the server, and will be augmented with 'art' after being spawned.",
            "type": "string"
        },
        "ArtPrefabPath": {
            "description": "Path to the unit's art prefab, relative to any Resources directory.\n\nArt is the non-networked part of a unit, added clientside after the unit has been spawned.",
            "type": "string"
        },
        "Data": {
            "$ref": "#/definitions/Data"
        },
        "Mobility": {
